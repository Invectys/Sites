@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@using Microsoft.Extensions.Options
@using TwilioConfiguration = LotteryMVC.Models.TwiloConfiguration
@inject IOptions<TwiloConfiguration> TwiloOptions
@{ 
    TwilioConfiguration Twilo = TwiloOptions.Value;
}
    <header class="masthead text-center text-white">
        <div class="masthead-content">
            <div class="container">

                <partial name="_StatusMessage" model="Model.StatusMessage" />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.PhoneNumber"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" disabled />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            
                        
                            <div class="form-group">
                                <a class="btn btn-primary" href="Manage/ChangePassword">Change Password</a>
                                <a class="btn btn-success" href="Manage/TwoFactorAuthentication">Two-factor Authentication</a>
                                @if (Twilo.TwiloEnabled)
                                {
                                    <a class="btn btn-success" href="Manage/VerifyPhone">Verify Phone</a>
                                }
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="btn btn-warning" asp-controller="Users">admin panel</a>
                                }
                            </div>
                        

                        
                       
                    </div>
                </div>

            </div>
        </div>
        <div class="bg-circle-1 bg-circle"></div>
        <div class="bg-circle-2 bg-circle"></div>
        <div class="bg-circle-3 bg-circle"></div>
        <div class="bg-circle-4 bg-circle"></div>
    </header>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}