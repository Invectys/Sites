@model LotteryMVC.Models.AddNoteModel
@{
    ViewBag.Title = "New notify";
}

<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="AddNote" asp-controller="History">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="UserID" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label">text</label>
                        <input type="text" asp-for="Text" class="form-control" />
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
</header> 