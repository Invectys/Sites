@model LotteryMVC.Models.GameViewModel
@{
    ViewBag.Title = "Add Game";
}

<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container">
            <form asp-action="Create" asp-controller="Games">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NeedPlayers" class="control-label">Need players</label>
                    <input type="text" asp-for="NeedPlayers" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Rate" class="control-label">Rate</label>
                    <input type="text" asp-for="Rate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NeedPhoneConfirmed" class="control-label">Need Phone Confirmed</label>
                    <input type="checkbox" asp-for="NeedPhoneConfirmed" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
</header>