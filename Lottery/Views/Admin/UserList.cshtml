@model Lottery.Models.UsersListViewModel
@{
    ViewBag.Title = "Users list";
}
<form method="get">
    <div class="form-inline form-group">

        <label class="control-label">Имя: </label>
        @Html.TextBox("name", Model.Name, htmlAttributes: new { @class = "form-control" })

       

        <input type="submit" value="find" class="btn btn-default" />
    </div>
</form>
<a asp-action="CreateUser">Add User</a>

<table class="table">
    <tr>
        <th>Login</th>
        <th>Mail</th>
        <th>Money</th>
        <th></th>
    </tr>

    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Money</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="ReserveUserAsync" asp-route-id="@user.Id">Reserve</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                    <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-userid="@user.Id">Roles</a>

                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>