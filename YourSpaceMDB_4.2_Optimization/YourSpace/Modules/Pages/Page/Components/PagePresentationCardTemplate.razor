@inherits CPagePresentation



<div class="row flex-fill">
    <div class="col-sm-12 col-md-7 px-0 image-page-presentation-container">
        <a href="@Url">
            <img class="image-page-presentation" src="@ImagePath" />
        </a>
    </div>
    <div class="col d-flex flex-column mx-3">
        <h1 class="">
            @Model.Title
        </h1>
        <div class="">
            @Model.TextDescription
        </div>

        <div class="d-flex flex-row mt-auto justify-content-start ">
            <div class=" d-flex align-items-center font-weight-bolder">
                <div class="icon icon-sm icon-man"></div>
                <div class="">
                    @Subscribers
                </div>
            </div>
            <div class="d-flex align-items-center font-weight-bolder px-1">
                <div class="icon icon-sm icon-orange-like "></div>
                <div class="">
                    @Likes
                </div>
            </div>
            <div class="ml-auto"></div>
            @if (ShowModerationPage)
            {
                <EditPageModerationInfoDisplay EditPageName="@Model.Name" Class=""></EditPageModerationInfoDisplay>
            }
            @if (ShowEditPage)
            {
                <EditPageDisplay PageCard="@Model" Changed="BlockEdited" PageDeleted="DeletePage" Class=""></EditPageDisplay>
            }
        </div>
        <div class="d-flex flex-row">
        
        </div>
    </div>
</div>


@code
{
    [Parameter] public bool ShowEditPage { get; set; } = false;
    [Parameter] public bool ShowModerationPage { get; set; } = false;

    void DeletePage()
    {
        onDeletePage.InvokeAsync(Model.Name);
    }
}