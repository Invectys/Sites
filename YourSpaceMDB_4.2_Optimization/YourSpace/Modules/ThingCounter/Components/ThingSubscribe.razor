@inherits CThingCounter
@inject LBlocksInfo L

<div class="card h-100 d-flex justify-content-center py-4">
    <div class="row justify-content-center ">
        @if (IsAdded)
        {
            <button class="btn btn-danger" @onclick="Remove">@L["Unsubscribe"]</button>
        }
        else
        {
            <button class="btn btn-info " @onclick="Add">@L["Subscribe"]</button>
        }
        <div class="d-flex flex-row ml-sm-4">
            <object type="image/svg+xml" data="dist/img/svg/user.svg"></object>
            <div class="d-flex align-items-center">@Amount</div>
        </div>
    </div>
</div>


