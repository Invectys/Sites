@inherits CThingCounter

<div class="card h-100 d-flex justify-content-center py-4">
    <div class="row justify-content-center ">
        @if (IsAdded)
        {
            <div class="icon icon-orange-like cursor-pointer" @onclick="Remove"></div>
        }
        else
        {
            <div class="icon icon-black-like cursor-pointer"@onclick="Add"></div>
        }
        <div class="d-flex flex-row ml-sm-4">
            <div class="d-flex align-items-center">@Amount</div>
        </div>
    </div>
</div>


