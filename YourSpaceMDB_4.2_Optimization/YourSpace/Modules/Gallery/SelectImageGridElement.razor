
<img src="@Image" class="gallery-img" @onclick ="Select">

@code {
    [Parameter] public string Image { get; set; }
    [Parameter] public EventCallback<MGalleryGridElementClick> OnClick { get; set; }


    void Select()
    {
        OnClick.InvokeAsync(new MGalleryGridElementClick() {  Path = Image });
    }

    private bool _selected = false;

    public void SetSelectState(bool state)
    {
        _selected = state;
    }
}
