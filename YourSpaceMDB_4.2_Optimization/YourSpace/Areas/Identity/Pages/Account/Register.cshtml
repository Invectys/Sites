@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@inject Microsoft.Extensions.Localization.IStringLocalizer<RegisterPage> L

<div class="card">

    <h5 class="card-header info-color white-text text-center py-4">
        <strong>@L["Sign up"]</strong>
    </h5>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

        <!-- Form -->
        <form class="text-center" style="color: #757575;" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div class="form-row">
                <div class="col">
                    <!-- First name -->
                    <div class="md-form">
                        <input type="text" id="materialRegisterFormFirstName" class="form-control" asp-for="Input.FirstName">
                        <label for="materialRegisterFormFirstName" asp-for="Input.FirstName">@L["Name"]</label>
                    </div>
                </div>
                <div class="col">
                    <!-- Last name -->
                    <div class="md-form">
                        <input type="email" id="materialRegisterFormLastName" class="form-control" asp-for="Input.LastName">
                        <label for="materialRegisterFormLastName" asp-for="Input.LastName">@L["Last Name"]</label>
                    </div>
                </div>
            </div>

            <!-- E-mail -->
            <div class="md-form mt-0">
                <input type="email" id="materialRegisterFormEmail" class="form-control" asp-for="Input.Email">
                <label for="materialRegisterFormEmail" asp-for="Input.Email">@L["Email"]</label>
            </div>

            <!-- Password -->
            <div class="md-form">
                <input type="password" id="materialRegisterFormPassword" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock" asp-for="Input.Password">
                <label for="materialRegisterFormPassword" asp-for="Input.Password">@L["Password"]</label>
                @*<small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                At least 8 characters and 1 digit
            </small>*@
            </div>

            <!--Confirm Password -->
            <div class="md-form">
                <input type="password" id="materialRegisterFormConfirmPassword" class="form-control" aria-describedby="materialRegisterFormConfirmPasswordHelpBlock" asp-for="Input.ConfirmPassword">
                <label for="materialRegisterFormConfirmPassword" asp-for="Input.ConfirmPassword">@L["Confirm password"]</label>
                @*<small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                At least 8 characters and 1 digit
            </small>*@
            </div>


            <!-- Sign up button -->
            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">@L["Next"]</button>

            <div asp-validation-summary="All" class="text-danger"></div>

            <hr>

            <!-- Terms of service -->
            <p>
                @L["By clicking"]
                <em>@L["Next"]</em> @L["you agree to our"]
                <a href="/terms" target="_blank">@L["terms of service"]</a>

        </form>
        <!-- Form -->

    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
