@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*@inject Microsoft.Extensions.Localization.IStringLocalizer<LoginPage> L*@


<div class="card">

    <h5 class="card-header info-color white-text text-center py-4">
        <strong>@Model.L["Sign In"]</strong>
    </h5>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

        <!-- Form -->
        <form class="text-center" style="color: #757575;" method="post">

            <!-- Email -->
            <div class="md-form">
                <input type="email" id="materialLoginFormEmail" class="form-control" asp-for="Input.Email">
                <label for="materialLoginFormEmail" asp-for="Input.Email">@Model.L["Email"]</label>
            </div>

            <!-- Password -->
            <div class="md-form">
                <input type="password" id="materialLoginFormPassword" class="form-control" asp-for="Input.Password">
                <label for="materialLoginFormPassword" asp-for="Input.Password">@Model.L["Password"]</label>
            </div>

            <div class="d-flex justify-content-around">
                <div>
                    <!-- Remember me -->
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="materialLoginFormRemember" asp-for="Input.RememberMe"/>
                        <label class="form-check-label" for="materialLoginFormRemember" asp-for="Input.RememberMe">@Model.L["Remember me"]</label>
                    </div>
                </div>
                <div>
                    <!-- Forgot password -->
                    <a id="forgot-password" asp-page="./ForgotPassword">@Model.L["Forgot Password"]</a>
                </div>
            </div>

            <!-- Sign in button -->
            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">@Model.L["Sign In"]</button>

            <!-- Register -->
            <p>
                @Model.L["Not a memeber"]
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Model.L["Register as a new user"]</a>
            </p>



        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
